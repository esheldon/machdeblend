#!/usr/bin/env python

from machdeblend import ImageMaker
from argparse import ArgumentParser

parser=ArgumentParser()
parser.add_argument('--ntrials',type=int,default=1)

def show_both(im, scene_im):
    try:
        # my image plotting
        import images
        images.multiview(im)

        images.view(scene_im)

        key=input('hit enter')


    except ImportError:
        # fall back to matplotlib
        import matplotlib.pyplot as plt

        w=10
        h=10
        fig=plt.figure(figsize=(8, 8))
        columns = 2
        rows = 1
        fig.add_subplot(rows, columns, 1)
        plt.imshow(im, interpolation='nearest')
        fig.add_subplot(rows, columns, 2)
        plt.imshow(scene_im, interpolation='nearest')
        plt.show()


def test():

    args=parser.parse_args()

    config = {

        'pixel_scale': 0.263, # arcsec/pixel

        'noise':0.1,

        'objects': {
            'r50': {
                'type':'uniform',
                'range': [0.5, 1.0], # arcsec
            },
            'flux': {
                'type':'uniform',
                'range': [100.0, 500.0], # arcsec
            },
            'g': {
                'type': 'truncated-gaussian',
                'sigma': 0.1,
            },

        },

        'scene': {
            'size': 20, # arcsec
            'nobjects': 10,
        }
    }

    maker=ImageMaker(config)

    for i in range(args.ntrials):
        # make an image of a single object
        im = maker.get_one()

        # make an image of a scene with multiple
        # objects
        scene_im = maker.get_scene()

        show_both(im, scene_im)


if __name__=='__main__':
    test()
